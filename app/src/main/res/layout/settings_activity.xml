<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layoutSettings"
        tools:context=".SettingsActivity">

    <TextView
            android:id="@+id/textViewSettingsTitle"
            android:text="Settings:"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:id="@+id/textViewNightMode"
            android:text="Night mode:"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textViewSettingsTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="80dp"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switchNightMode"
            app:layout_constraintTop_toTopOf="@+id/textViewNightMode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textViewNightMode"
            app:layout_constraintBottom_toBottomOf="@+id/textViewNightMode"/>
    <TextView
            android:text="Show contact images:"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewShowImages"
            app:layout_constraintStart_toStartOf="@+id/textViewNightMode"
            app:layout_constraintTop_toBottomOf="@+id/textViewNightMode"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="@+id/textViewNightMode"
            android:textSize="20sp"/>
    <TextView
            android:text="May significantly reduce performance."
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMayReducePerf"
            app:layout_constraintStart_toStartOf="@+id/textViewShowImages"
            app:layout_constraintTop_toBottomOf="@+id/textViewShowImages"
            app:layout_constraintEnd_toEndOf="@+id/textViewShowImages"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switchShowImages"
            app:layout_constraintStart_toStartOf="@+id/switchNightMode"
            app:layout_constraintEnd_toEndOf="@+id/switchNightMode"
            app:layout_constraintTop_toTopOf="@+id/textViewShowImages"
            app:layout_constraintBottom_toBottomOf="@+id/textViewShowImages"/>
    <ImageView
            android:id="@+id/imageViewLiv"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/chibi_liv_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewMayReducePerf"
            android:layout_marginTop="75dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>