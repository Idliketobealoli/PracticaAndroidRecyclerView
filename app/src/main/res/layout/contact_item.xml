<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/cLayoutItem"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/contact_pfp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            tools:srcCompat="@drawable/default_user_pfp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"/>
    <TextView
            android:id="@+id/contact_name"
            android:text="contact_name"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="60dp"
            app:layout_constraintStart_toEndOf="@+id/contact_pfp"
            app:layout_constraintTop_toTopOf="@+id/contact_pfp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:id="@+id/phone_number"
            android:text="phone_number"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/contact_name"
            app:layout_constraintStart_toStartOf="@+id/contact_name"
            app:layout_constraintEnd_toEndOf="@+id/contact_name"
            android:layout_marginTop="15dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/star_off"
            android:id="@+id/star_contact_icon" app:layout_constraintTop_toTopOf="@+id/contact_name"
            app:layout_constraintStart_toEndOf="@+id/contact_name" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/contact_name"/>
</androidx.constraintlayout.widget.ConstraintLayout>